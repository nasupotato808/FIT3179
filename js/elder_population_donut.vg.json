{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 5 States with Highest Percentage of Elderly Population",
    "fontSize": 24,
    "font": "Helvetica",
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/nasupotato808/FIT3179/refs/heads/main/data/population_state.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2004,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.age != 'overall' && datum.ethnicity == 'overall' && year(datum.date) == Year_selection"
    },
    {
      "calculate": "datum.age == '65-69' || datum.age == '70+' ? 'Above 65' : 'Below 65'",
      "as": "age_group"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "population",
          "as": "population"
        }
      ],
      "groupby": ["state", "age_group"]
    },
    {
      "pivot": "age_group",
      "value": "population",
      "groupby": ["state"]
    },
    {
      "calculate": "datum['Above 65'] / (datum['Above 65'] + datum['Below 65'])",
      "as": "elderly_percentage"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "elderly_percentage",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.rank <= 5"
    },
    {
      "fold": ["Above 65", "Below 65"],
      "as": ["age_group", "population"]
    }
  ],
  "facet": {
    "field": "state",
    "type": "nominal",
    "columns": 2,
    "title": "State"
  },
  "spec": {
    "width": 150,
    "height": 150,
    "mark": {
      "type": "arc",
      "innerRadius": 50,
      "stroke": "#fff"
    },
    "encoding": {
      "theta": { "field": "population", "type": "quantitative" },
      "color": {
        "field": "age_group",
        "type": "nominal",
        "scale": { "scheme": "category20" },
        "legend": {
          "title": "Age Group"
        }
      },
      "tooltip": [
        { "field": "age_group", "type": "nominal", "title": "Age Group" },
        { "field": "population", "type": "quantitative", "title": "Population" }
      ]
    }
  },
  "config": {
    "view": { "stroke": null },
    "arc": { "cornerRadius": 5, "padAngle": 0.01 }
  }
}
