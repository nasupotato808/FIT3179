{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Non-ICU Bed Utilisation", "fontSize": 24 },
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/nasupotato808/FIT3179/refs/heads/main/data/MalaysiaWith30Graticules.json",
    "format": { "type": "topojson", "feature": "my" }
  },

  "projection": { "type": "mercator" },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/nasupotato808/FIT3179/refs/heads/main/data/bedutil_01_table_state_clear.csv",
          "format": { "type": "csv" }
        },
        "key": "state",
        "fields": ["util_nonicu"]
      }
    }
  ],

  "layer": [
    {
      "mark": { "type": "geoshape", "stroke": "black", "fill": "none" },
      "data": {
        "url": "https://raw.githubusercontent.com/nasupotato808/FIT3179/refs/heads/main/data/MalaysiaWith30Graticules.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      }
    },
    {
      "mark": { "type": "geoshape", "stroke": "grey", "fillOpacity": 0.1 },
      "data": {
        "url": "https://raw.githubusercontent.com/nasupotato808/FIT3179/refs/heads/main/data/MalaysiaWith30Graticules.json",
        "format": { "type": "topojson", "feature": "ne_10m_land" }
      }
    },
    {
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "util_nonicu",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [25, 50, 75, 100],
            "range": ["#f1eef6", "#bdc9e1", "#74a9cf", "#0570b0"]
          },
          "legend": { "title": "Non-ICU Bed Utilization (%)" }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          {
            "field": "util_nonicu",
            "type": "quantitative",
            "title": "Non-ICU Bed Utilization"
          }
        ]
      }
    }
  ]
}
